{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mtorrent-gui",
  "version": "0.1.0",
  "identifier": "com.danglingpointer.mtorrent-gui",
  "build": {
    "frontendDist": "ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "mtorrent",
        "width": 800,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}