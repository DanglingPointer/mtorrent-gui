{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "tauri",
			"args": [
				"dev",
				"--no-watch",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: tauri dev"
		},
		{
			"type": "cargo",
			"command": "tauri",
			"args": [
				"build",
				"--no-bundle",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: tauri build"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--all-targets",
				"--all-features",
				"--",
				"-Dwarnings",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "none",
			"label": "rust: cargo clippy"
		},
	]
}